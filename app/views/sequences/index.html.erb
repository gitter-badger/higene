<%= title("Sequences â€§ #{@current_workspace.name}") %>

<div class="col-sm-1"></div>
<div class="col-sm-7">
  <% if @sequences.empty? %>
    <div class="row">
      <div class="col-sm-7 center">
        <div class="alert alert-warning text-center", role="alert">
          This workspace is empty.
        </div>
      </div>
    </div>
  <% else %>
    <h3 class="text-center"><%= @current_workspace.name %></h3>
    <div class="row">
      <%= render "shared/pager" %>
    </div>
    <% @sequences.each do |sequence| %>
      <div class="row">
        <div class="col-sm-2">
          <%= sequence.type %>
        </div>

        <div class="col-sm-6">
          <%= link_to sequence.name, workspace_sequence_path(name: sequence.name) %>
        </div>

        <div class="col-sm-4">
          <%= pluralize sequence.children.length, "child" %>, <%= pluralize sequence.parents.length, "parents" %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <%= render "shared/pager" %>
    </div>
  <% end %>
</div>
<div class="col-sm-3 text-center">
  <%= link_to fa_icon("upload lg", text: "Import data"), new_workspace_sequence_path, class: "btn btn-primary"%>
</div>
<div class="col-sm-1"></div>
