<%= title("Sequences â€§ #{@current_workspace.name}") %>

<div class="col-sm-10 center">
  <% if @sequences.first.nil? %>
    <div class="col-sm-7 center">
      <div class="alert alert-warning text-center", role="alert">
        <p>This workspace is empty.</p><br>
        <%= link_to "Import", new_workspace_sequence_path, class: "btn btn-primary", role: "button" %>
      </div>
    </div>
  <% else %>
    <%= render "shared/pager" %>
    <% @sequences.each do |sequence| %>
      <div class="row">
        <%= "#{sequence.name} | #{sequence.type} " %>
      </div>
    <% end %>
  <% end %>
</div>
